{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "main",
	"description": "Capabilities for the main window",
	"windows": [
		"main"
	],
	"permissions": [
		"path:default",
		"event:default",
		"window:default",
		"app:default",
		"resources:default",
		"menu:default",
		"shell:allow-open",
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{
					"name": "exec-sh",
					"cmd": "sh",
					"args": [
						"-c",
						{
							"validator": "\\S+"
						}
					],
					"sidecar": false
				}
			]
		},
		"notification:default",
		"os:allow-platform"
	]
}
